<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bestiize.testcentercrop.MainActivity">

    <com.example.bestiize.testcentercrop.SquareLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2e2e2e"
        android:id="@+id/squareLayout">


        <com.example.bestiize.testcentercrop.CropVideoTextureView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/crop_video"/>

    </com.example.bestiize.testcentercrop.SquareLayout>

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/squareLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="54dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="31dp"
        android:id="@+id/button" />

</RelativeLayout>
